    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_field :location, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="field">
      <%= f.label :notes %><br>
      <%= f.text_area :notes, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Submit report", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
