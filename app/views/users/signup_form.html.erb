<div class="panel panel-default col-xs-offset-3 col-xs-6">
	<h1>Hey <%= @user.first_name %>, great to meet you!</h1>
	<h3>Just one more step so we make sure we get all of your information</h3>
	<h4>We'll need this info incase you ever need to report your pet lost, but if you want to continue on to your account, no worries, just click here <%= user_path(@user) %></h4>

	<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: 'form-control' %>
    </div><br>
    <div class="field">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: 'form-control' %>
    </div><br>
    <div class="field">
      <%= f.label :state %><br>
      <%= f.text_field :state, class: 'form-control' %>
    </div><br>
    <div class="field">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, class: 'form-control' %>
    </div><br>
    <div class="actions">
      <%= f.submit class: "btn btn-primary btn-block" %>
    </div><br />
  </div>
<% end %>
</div>